<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:strokeWidth="2dp"
        app:strokeColor="@color/colorPrimaryDark"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/theme_select_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:textSize="16sp"
                android:text="@string/theme_change_text"/>

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:layout_alignParentEnd="true" />

           <RadioGroup
               android:id="@+id/radio_group"
               android:layout_below="@+id/theme_select_dialog_title"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <RadioButton
                   android:id="@+id/radio_btn_1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/theme_change_text_radio_1"/>

               <RadioButton
                   android:id="@+id/radio_btn_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u0020\u0020\u0020\u0020\u0020RED"/>

               <RadioButton
                   android:id="@+id/radio_btn_3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u0020\u0020\u0020\u0020\u0020BLUE"/>

               <RadioButton
                   android:id="@+id/radio_btn_4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u0020\u0020\u0020\u0020\u0020ORANGE"/>

               <RadioButton
                   android:id="@+id/radio_btn_5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u0020\u0020\u0020\u0020\u0020PINK"/>

           </RadioGroup>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>