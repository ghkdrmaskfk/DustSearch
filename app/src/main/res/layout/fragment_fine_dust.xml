<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txt_now_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:text="@string/txt_now_location"
                    android:layout_marginLeft="4dp"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_toLeftOf="@+id/txt_now_location"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_gps"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_now_location"
                    android:layout_below="@+id/txt_now_location"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="4dp"
                    android:elevation="8dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="강남구 선릉역"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/fine_dust_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/card_view_now_location"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="좋음"/>

                <RelativeLayout
                    android:id="@+id/fine_dust_layout"
                    android:layout_below="@+id/fine_dust_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/fine_dust_center_status_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_fine_dust" />

                    <LinearLayout
                        android:id="@+id/fine_dust_center_layout_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/fine_dust_center_status_img"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/fine_dust_center_txt_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="7일 평균 | "
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="양호"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fine_dust_center_txt_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="서울 | "
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="보통"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fine_dust_center_txt_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="정보 | "
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="'???'"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <pl.pawelkleczkowski.customgauge.CustomGauge
                            android:id="@+id/fine_dust_gauge"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            app:gaugeEndValue="300"
                            app:gaugePointEndColor="@color/colorPrimary"
                            app:gaugePointStartColor="@color/colorPrimaryDark"
                            app:gaugeStartAngle="135"
                            app:gaugeStartValue="0"
                            app:gaugeStrokeCap="ROUND"
                            app:gaugeStrokeColor="@color/colorGray"
                            app:gaugeStrokeWidth="10dp"
                            app:gaugeSweepAngle="270" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fine_dust_center_layout_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/fine_dust_center_layout_1">

                        <LinearLayout
                            android:id="@+id/fine_dust_center_txt_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="7일 평균 | "
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="양호"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fine_dust_center_txt_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="서울 | "
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="보통"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fine_dust_center_txt_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="정보 | "
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="'???'"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <pl.pawelkleczkowski.customgauge.CustomGauge
                            android:id="@+id/fine_dust_cho_gauge"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            app:gaugeEndValue="300"
                            app:gaugePointEndColor="@color/colorPrimary"
                            app:gaugePointStartColor="@color/colorPrimaryDark"
                            app:gaugeStartAngle="135"
                            app:gaugeStartValue="0"
                            app:gaugeStrokeCap="ROUND"
                            app:gaugeStrokeColor="@color/colorGray"
                            app:gaugeStrokeWidth="10dp"
                            app:gaugeSweepAngle="270" />
                    </LinearLayout>

                </RelativeLayout>
                <!--<com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/fine_dust_pie_chart"
                    android:layout_below="@+id/fine_dust_layout"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:visibility="gone"/>-->
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</layout>

